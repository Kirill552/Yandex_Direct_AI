# Пример файла конфигурации для Yandex.Direct AI Campaign Manager
# Скопируйте этот файл в .env или config.env и заполните своими значениями

# OpenAI API настройки
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_REASONING=o1-mini
OPENAI_MODEL_CREATIVE=gpt-4
OPENAI_MODEL_OPTIMIZATION=gpt-3.5-turbo

# Yandex.Direct API настройки
YANDEX_DIRECT_TOKEN=your_yandex_direct_token_here
YANDEX_DIRECT_CLIENT_LOGIN=your_client_login_here
YANDEX_DIRECT_API_URL=https://api.direct.yandex.com/json/v5/

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Настройки кампаний по умолчанию
DEFAULT_DAILY_BUDGET=1000
DEFAULT_CURRENCY=RUB
MAX_KEYWORDS_PER_GROUP=20
DEFAULT_BID=100

# Региональные настройки
DEFAULT_REGION_IDS=225  # Россия
DEFAULT_LANGUAGE=RU

# Настройки оптимизации
CONVERSION_TRACKING_ENABLED=true
AUTO_OPTIMIZATION_ENABLED=true
MONITORING_INTERVAL_MINUTES=60 